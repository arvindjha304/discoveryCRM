                if($scope.AlternateName !=''){
                    if($scope.AlternateName == $scope.MobileNumber){
                        $scope.disableForm = true;
                        mobileMatched = 1;
                        $('#noExistsMsg_AlternateName').text('Alternate Number and Mobile Number cannot be same.').show();
