                                if($scope.disbledMobileNumber  != parseInt('<?php echo $this->formData[0]['mobile']?>')){
                                    $('#noExistsMsg_'+fieldName).text('').text('Mobile Number already exists').show();
                                    $scope.disableForm = true;
                                }else $('#noExistsMsg_'+fieldName).hide();
                            }else if(fieldName=='AlternateName'){
                                if($scope.AlternateName  != parseInt('<?php echo $this->formData[0]['alt_no']?>')){
